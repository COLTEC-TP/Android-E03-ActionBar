<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufmg.coltec.tp.e04actionbar.MainActivity">

    <TextView android:id="@+id/txt_first_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/string_first_activity"
        android:textSize="@dimen/dimen_text_activity" />

    <Button android:id="@+id/btn_first_activity_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/string_btn_first_activity_second"
        android:textSize="@dimen/dimen_text_btn_activity"/>

    <Button android:id="@+id/btn_first_activity_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_first_activity_second"
        android:layout_centerHorizontal="true"
        android:text="@string/string_btn_first_activity_third"
        android:textSize="@dimen/dimen_text_btn_activity"
        android:layout_marginTop="@dimen/dimen_text_activity" />



</RelativeLayout>
